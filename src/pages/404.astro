---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="404: Page Not Found - Sohum Kothavade">
  <div class="min-h-[60vh] flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-gray-900 dark:text-gray-100 mb-4">404</h1>
      <p class="text-2xl text-gray-600 dark:text-gray-400 mb-8">Page not found</p>
      <p class="text-gray-600 dark:text-gray-400 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors"
      >
        Go back home
      </a>
    </div>
  </div>
</BaseLayout>
