---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<BaseLayout title="Blog - Sohum Kothavade">
  <div class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="container mx-auto max-w-4xl">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-8">Blog</h1>
      
      {posts.length === 0 ? (
        <p class="text-gray-600 dark:text-gray-400">No blog posts yet. Check back soon!</p>
      ) : (
        <div class="space-y-8">
          {posts.map((post) => (
            <article class="border-b border-gray-200 dark:border-gray-800 pb-8 last:border-b-0">
              <time class="text-sm text-gray-600 dark:text-gray-400">
                {post.data.publishDate.toLocaleDateString('en-us', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mt-2 mb-2">
                <a href={`/blog/${post.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                  {post.data.title}
                </a>
              </h2>
              <p class="text-gray-700 dark:text-gray-300 mb-4">
                {post.data.description}
              </p>
              <a href={`/blog/${post.slug}`} class="text-primary-600 dark:text-primary-400 hover:underline">
                Read more â†’
              </a>
            </article>
          ))}
        </div>
      )}
    </div>
  </div>
</BaseLayout>
