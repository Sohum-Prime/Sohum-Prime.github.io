---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={`${post.data.title} - Sohum Kothavade`} description={post.data.description}>
  <article class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="container mx-auto max-w-3xl">
      <header class="mb-8">
        <time class="text-sm text-gray-600 dark:text-gray-400">
          {post.data.publishDate.toLocaleDateString('en-us', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mt-2 mb-4">
          {post.data.title}
        </h1>
        {post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>
      <div class="prose prose-lg dark:prose-dark max-w-none">
        <Content />
      </div>
    </div>
  </article>
</BaseLayout>
