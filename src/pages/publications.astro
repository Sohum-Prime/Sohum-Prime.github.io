---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const publications = (await getCollection('publications')).sort((a, b) => b.data.year - a.data.year);
---

<BaseLayout title="Publications - Sohum Kothavade">
  <div class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="container mx-auto max-w-4xl">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-8">Publications</h1>
      
      {publications.length === 0 ? (
        <p class="text-gray-600 dark:text-gray-400">No publications yet. Check back soon!</p>
      ) : (
        <div class="space-y-8">
          {publications.map((pub) => (
            <article class="border-b border-gray-200 dark:border-gray-800 pb-8 last:border-b-0">
              <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
                {pub.data.title}
              </h2>
              <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                {pub.data.authors.join(', ')}
                <br />
                <em>{pub.data.venue}, {pub.data.year}</em>
              </p>
              <p class="text-gray-700 dark:text-gray-300 mb-4">
                {pub.data.abstract}
              </p>
              <div class="flex flex-wrap gap-4">
                {pub.data.pdf && (
                  <a href={pub.data.pdf} class="text-primary-600 dark:text-primary-400 hover:underline" target="_blank" rel="noopener noreferrer">
                    ğŸ“„ PDF
                  </a>
                )}
                {pub.data.arxiv && (
                  <a href={pub.data.arxiv} class="text-primary-600 dark:text-primary-400 hover:underline" target="_blank" rel="noopener noreferrer">
                    ğŸ“ arXiv
                  </a>
                )}
                {pub.data.github && (
                  <a href={pub.data.github} class="text-primary-600 dark:text-primary-400 hover:underline" target="_blank" rel="noopener noreferrer">
                    ğŸ’» Code
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </div>
</BaseLayout>
